<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.IPTV" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/luxury_gold</item>
        <item name="colorPrimaryVariant">@color/luxury_gold_dark</item>
        <item name="colorOnPrimary">@color/luxury_black</item>
        <item name="colorSecondary">@color/luxury_gold_accent</item>
        <item name="colorSecondaryVariant">@color/luxury_gold_dark</item>
        <item name="colorOnSecondary">@color/luxury_black</item>
        <item name="android:statusBarColor">@color/luxury_background</item>
        <item name="android:navigationBarColor">@color/luxury_background</item>
        <item name="android:windowBackground">@color/luxury_background</item>
    </style>

    <style name="Theme.IPTV" parent="Base.Theme.IPTV" />

    <style name="Theme.IPTV.Fullscreen" parent="Theme.IPTV">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
